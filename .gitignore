# EditorConfig ayuda a mantener estilos consistentes entre IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP y Laravel
[*.php]
indent_style = space
indent_size = 4

# JSON, YAML, Markdown
[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2

# HTML, CSS, JS, TS
[*.{html,css,scss,js,ts}]
indent_style = space
indent_size = 2
